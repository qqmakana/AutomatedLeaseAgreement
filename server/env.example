# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lease_db

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OCR Service Configuration
# Options: TESSERACT (FREE, no setup), GOOGLE_CLOUD_VISION, AWS_TEXTRACT, AZURE_VISION
OCR_PROVIDER=TESSERACT

# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEYFILE=path/to/service-account-key.json

# AWS Textract
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Azure Computer Vision
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_VISION_KEY=your-api-key

# File Storage
STORAGE_PROVIDER=local
AWS_S3_BUCKET=your-bucket-name
GCS_BUCKET_NAME=your-bucket-name

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Notifications (Gmail)
# To get an App Password:
# 1. Enable 2-Factor Authentication on your Gmail account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Create a new App Password for "Mail" on "Other (Custom name)"
# 4. Copy the 16-character password (without spaces)
ADMIN_EMAIL=your-gmail@gmail.com
ADMIN_EMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

